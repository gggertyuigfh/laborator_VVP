#include <iostream>
#include <cmath>
using namespace std;

int main () {
    double x1, y1, x2, y2, x3, y3, x, y, A, B, C, AB, BC, AC, P, S, Rasto, Sum, Proiz;

    cout << "Задание 1. Найти расстояние между двумя точками с заданными координатами (x1, y1) и (x2, y2)" << endl;
    cout << "Координата первой точки по оси x = ";
    cin >> x1;
    cout << "Координата первой точки по оси y = ";
    cin >> y1;
    cout << "Координата второй точки ао оси x = ";
    cin >> x2;
    cout << "Координата второй точки по оси y = ";
    cin >> y2;
    x = abs(x1-x2);
    y = abs(y1-y2);
    Rasto = sqrt(x*x+y*y);
    
    cout << "Растояние между двумя точками = " << Rasto << endl;

    cout << "Задание 2. Даны три точки A, B, C на числовой оси. Найти длины отрезков AC и BC и их сумму " << endl;
    cout << "Точка A=";
    cin >> A;
    cout << "Точка B=";
    cin >> B;
    cout << "Точка C=";
    cin >> C;
    AC = abs(A-C);
    BC = abs(B-C);
    Sum = AC+BC;
    
    cout << "Длинна отрезока AC = " << AC << endl;
    cout << "Длинна отрезока BC = " << BC << endl;
    cout << "Сумма длин отрезков AC и BC = " << Sum << endl;
    
    cout << "Задание 3. Даны три точки A, B, C на числовой оси. Точка C расположена между точками A и B. Найти произведение длин отрезков AC и BC" << endl;
    cout << "Точка A=";
    cin >> A;
    cout << "Точка B=";
    cin >> B;
    cout << "Точка C=";
    cin >> C;
    AB = abs(A-B);
    AC = abs(A-C);
    BC = abs(B-C);
    if (AB>AC and AB>BC)
    {
    Proiz = AC*BC;
    
    cout << "Произведение длин отрезков AC и BC = " << Proiz << endl;
    } 
    else
    {
     cout << "Читай условие внимательнее" << endl;
    }
    cout << "Задание 4. Даны координаты двух противоположных вершин прямоугольника: (x1, y1), (x2, y2). Стороны прямоугольника параллельны осям координат. Найти периметр и площадь данного прямоугольника." << endl;
    cout << "Координата по оси x 1й вершины = ";
    cin >> x1;
    cout << "Координата по оси y 1й вершины = ";
    cin >> y1;
    cout << "Координата по оси x 2й вершины = ";
    cin >> x2;
    cout << "Координата по оси y 2й вершины = ";
    cin >> y2;
    x = abs(x1-x2);
    y = abs(y1-y2);
    P = 2*(x+y);
    S = x*y;
    
    cout << "Периметр прямоугольника = " << P << endl;
    cout << "Площадь прямоугольника = " << S << endl;
    
    cout << "Задание 5. Даны координаты трех вершин треугольника: (x1, y1), (x2, y2), (x3, y3). Найти его периметр и площадь" << endl;
    cout << "Координаты по оси x 1й вершины = ";
    cin >> x1;
    cout << "Координата по оси y 1й вершины = ";
    cin >> y1;
    cout << "Координата по оси x 2й вершины = ";
    cin >> x2;
    cout << "Координата по оси y 2й вершины = ";
    cin >> y2;
    cout << "Координата по оси x 3й вершины  = ";
    cin >> x3;
    cout << "Координата по оси y 3й вершины = ";
    cin >> y3;
    
    x = abs(x1-x2);
    y = abs(y1-y2);
    AB = sqrt(x*x+y*y);
    x = abs(x1-x3);
    y = abs(y1-y3);
    AC = sqrt(x*x+y*y);
    x = abs(x2-x3);
    y = abs(y2-y3);
    BC = sqrt(x*x+y*y);
    P = AB+BC+AC;
    S = 0.5 * abs((x2 - x1) * (y3 - y1) - (x3 - x1) * (y2 - y1));
    
    cout << "Периметр треугольника = " << P << endl;
    cout << "Площадь треугольника = " << S << endl;
}

