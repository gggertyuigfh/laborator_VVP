#include <iostream>
#include <cmath>

using namespace std;
 
int main ()
{
    int a, b, sum, c, Ax, Ay, Bx, By, Cx, Cy, ab, ac, abX, abY, acX, acY, x, y;
    
    cout << "1. Даны две переменные целого типа: A и B. Если их значения не равны, то присвоить каждой переменной большее из этих значений, а если равны, то присвоить переменным нулевые значения. Вывести новые значения переменных A и B." << endl;
    cout << "A= ";
    cin >> a;
    cout << "B= ";
    cin >> b;
    if (a != b)
    {
        if (a > b)
        {
            b = a;
        }
        else
        {
            a = b;
        }
    }
    else
    {
        a = 0;
        b = 0;
    }
    cout << "A= " << a << endl;
    cout << "B= " << b << endl;
    
    
    cout << "2. Даны три числа. Найти сумму двух наибольших из них" << endl;
     cout << "A: ";
    cin >> a;
    cout << "B: ";
    cin >> b;
    cout << "C: ";
    cin >> c;
    if (b <= c and b <= a)
    {
        sum = a+c;
        cout << "сумма = "<< sum << endl;
    }
    else
    {
        if (a <= c and a <= b)
        {
            sum = b+c;
            cout << "сумма = "<< sum << endl;
        }
        else
        {
            sum = b+a;
            cout << "сумма = "<< sum << endl;
        }
    }
    
    
    cout << "3. На плоскости расположены три точки: A, B, C. Определить, какая из двух последних точек (B или C) расположена ближе к A, и вывести эту точку и ее расстояние от точки A."<< endl;
    cout << "Введите координаты точек А, В, С:"<< endl;
    cout << "Координата точки A по x = ";
    cin >> Ax;
    cout << "Координата точки A по y = ";
    cin >> Ay;
    cout << "Координата точки B по x = ";
    cin >> Bx;
    cout << "Координата точки B по y = ";
    cin >> By;
    cout << "Координата точки C по x = ";
    cin >> Cx;
    cout << "Координата точки C по y = ";
    cin >> Cy;
    abX = abs(Ax - Bx);
    abY = abs(Ay - By);
    ab = sqrt(abX * abX + abY * abY);
    acX = abs(Ax - Cx);
    acY = abs(Ay - Cy);
    ac = sqrt(acX * acX + acY * acY);
    if (ab < ac)
    {
        cout << "Точка В ближе к точке А. Расстояние = " << ab << endl;
    }
    else
    {
        if (ac < ab)
        {
            cout << "Точка C ближе к точке А. Расстояние = " << ac << endl;
        }
        else
        {
            if (ab == ac)
            {
                cout << "Точки B и С равноудалены от точки A"<< endl;
            }
        }

    }
    
    
    cout << "4. Даны координаты точки, не лежащей на координатных осях OX и OY. Определить номер координатной четверти, в которой находится данная точка"<< endl;
    cout << "X = ";
    cin >> x;
    cout << "Y = ";
    cin >> y;
    if ((x > 0) & (y > 0))
    {
        cout << "1"<< endl;
    }
    else
    {
        if ((x < 0) & (y > 0))
        {
            cout << "2"<< endl;
        }
        else
        {
            if ((x < 0) & (y < 0))
            {
                cout << "3"<< endl;
            }
            else
            {
                cout << "4"<< endl;
            }
        }
    }
    
    
    cout << "5. Дано целое число. Вывести его строку-описание вида «отрицательное четное число», «нулевое число», «положительное нечетное число» и т. д."<< endl;
    cout << "Число = ";
    cin >> a;
    if (a < 0 and a % 2 == 0)
    {
        cout << "Отрицательное четное число"<< endl;
    }
    if (a == 0)
    {
        cout << "Нулевое число";
    }
    if (a > 0 and a % 2 == 1)
    {
        cout << "Положитьельное нечетное число"<< endl;
    }
    if (a > 0 and a % 2 == 0)
    {
        cout << "Положитьельное четное число"<< endl;
    }
    if (a < 0 and a % 2 == 1)
    {
        cout << "Отрицательное четное число"<< endl;
    }
    
    
    cout << "6. Дано целое число, лежащее в диапазоне 1–999. Вывести его строкуописание вида «четное двузначное число», «нечетное трехзначное число» и т. д."<< endl;
     cout << "Введите число от 1 до 999: ";
    cin >> a;
    if (a / 100 and a % 2 == 0)
    {
        cout << "Четное трехзначное число"<< endl;
    }
    if (a / 100 and a % 2 == 1)
    {
        cout << "Нечетное трехзначное число"<< endl;
    }
    if (a <= 99 and a % 2 == 0 && a >= 10)
    {
        cout << "Четное двухзначное число"<< endl;
    }
    if (a <= 99 and a % 2 == 1 && a >= 10)
    {
        cout << "Нечетное двухзначное число"<< endl;
    }
    if (a < 10 and a % 2 == 0)
    {
        cout << "Четное однозначное число"<< endl;
    }
    if (a < 10 and a % 2 == 1)
    {
        cout << "Нечетное однозначное число"<< endl;
    }
}
