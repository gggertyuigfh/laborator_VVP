
#include <iostream>
#include <cmath>
using namespace std;
    
int main () {

    double A, B, C, Perest1, Perest2, x, y, z, AA, AAA;
    
    cout << "Задание 1" << endl;
    cout << "Переменная A = ";
    cin >> A;
    cout << "Переменная B = ";
    cin >> B;
    
    Perest1 = A;
    A = B;
    B = Perest1;
    
    cout << "Переменная A = " << A << endl;
    cout << "Переменная B = " << B << endl;
    
    cout << "Задание 2" << endl;
    cout << "Переменная A = ";
    cin >> A;
    cout << "Переменная B = ";
    cin >> B;
    cout << "Переменная C = ";
    cin >> C;
    
    Perest1 = A;
    A=C;
    Perest2=B;
    B=Perest1;
    C=Perest2;
    
    cout << "Переменная A = " << A << endl;
    cout << "Переменная B = " << B << endl;
    cout << "Переменная C = " << C << endl;


    cout << "Задание 3" << endl;
    cout << "Переменная A = ";
    cin >> A;
    cout << "Переменная B = ";
    cin >> B;
    cout << "Переменная C = ";
    cin >> C;
    
    Perest1 = A;
    A=B;
    Perest2=C;
    C=Perest1;
    B=Perest2;
    
    cout << "Переменная A = " << A << endl;
    cout << "Переменная B = " << B << endl;
    cout << "Переменная C = " << C << endl;

    cout << "Задание 4" << endl;
    cout << "y = 3x^6 − 6x^2 − 7" << endl;
    cout << "x = ";
    cin >> x;
    
    y = 3*(x*x*x*x*x*x)-6*(x*x)-7;
    
    cout << "y =" << y << endl;
    
    cout << " Задание 5" << endl;
    cout << "y = 4(x−3)^6 − 7(x−3)^3 + 2" << endl;
    cout << "x = ";
    cin >> x;
    
    z=x-3;
    y=4*(z*z*z*z*z*z)-7*(z*z*z)+2;
    
    cout << "y = " << y << endl;

    
    cout << "Задание 6" << endl;
    cout << "A = ";
    cin >> A;
    AA=A*A;
    A=AA*AA*AA;
    cout << "A^8 = " << A << endl;
    
    cout << "Задание 7" << endl;
    cout << "A = ";
    cin >> A;
    
    AA=A*A;
    AAA=A*A*A;
    A=AAA*AAA*AAA*AA*AA*AA;
    
    cout << "A^15 = " << A << endl;
    
}

