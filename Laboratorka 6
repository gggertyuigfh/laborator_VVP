
#include <iostream>
#include <cmath>
using namespace std;
    
int main () {

    double A, B, C, Perest1, Perest2, x, y, z, AA, AAA;
    
    cout << "Задание 1. Поменять местами содержимое переменных A и B и вывести новые значения A и B." << endl;
    cout << "Переменная A = ";
    cin >> A;
    cout << "Переменная B = ";
    cin >> B;
    
    Perest1 = A;
    A = B;
    B = Perest1;
    
    cout << "Переменная A = " << A << endl;
    cout << "Переменная B = " << B << endl;
    
    cout << "Задание 2. Даны переменные A, B, C. Изменить их значения, переместив содержимое A в B, B — в C, C — в A, и вывести новые значения переменных A, B, C." << endl;
    cout << "Переменная A = ";
    cin >> A;
    cout << "Переменная B = ";
    cin >> B;
    cout << "Переменная C = ";
    cin >> C;
    
    Perest1 = A;
    A=C;
    Perest2=B;
    B=Perest1;
    C=Perest2;
    
    cout << "Переменная A = " << A << endl;
    cout << "Переменная B = " << B << endl;
    cout << "Переменная C = " << C << endl;


    cout << "Задание 3. Даны переменные A, B, C. Изменить их значения, переместив содержимое A в C, C — в B, B — в A, и вывести новые значения переменных A, B, C." << endl;
    cout << "Переменная A = ";
    cin >> A;
    cout << "Переменная B = ";
    cin >> B;
    cout << "Переменная C = ";
    cin >> C;
    
    Perest1 = A;
    A=B;
    Perest2=C;
    C=Perest1;
    B=Perest2;
    
    cout << "Переменная A = " << A << endl;
    cout << "Переменная B = " << B << endl;
    cout << "Переменная C = " << C << endl;

    cout << "Задание 4. Найти значение функции y = 3x6 − 6x2 − 7 при данном значении x" << endl;
    cout << "y = 3x^6 − 6x^2 − 7" << endl;
    cout << "x = ";
    cin >> x;
    
    y = 3*(x*x*x*x*x*x)-6*(x*x)-7;
    
    cout << "y =" << y << endl;
    
    cout << " Задание 5. Найти значение функции y = 4(x−3)6 − 7(x−3)3 + 2 при данном значении x" << endl;
    cout << "y = 4(x−3)^6 − 7(x−3)^3 + 2" << endl;
    cout << "x = ";
    cin >> x;
    
    z=x-3;
    y=4*(z*z*z*z*z*z)-7*(z*z*z)+2;
    
    cout << "y = " << y << endl;

    
    cout << "Задание 6. Дано число A. Вычислить A^8 , используя вспомогательную переменную и три операции умножения." << endl;
    cout << "A = ";
    cin >> A;
    AA=A*A;
    A=AA*AA*AA;
    cout << "A^8 = " << A << endl;
    
    cout << "Задание 7. Дано число A. Вычислить A^15, используя две вспомогательные переменные и пять операций умножения." << endl;
    cout << "A = ";
    cin >> A;
    
    AA=A*A;
    AAA=A*A*A;
    A=AAA*AAA*AAA*AA*AA*AA;
    
    cout << "A^15 = " << A << endl;
    
}

